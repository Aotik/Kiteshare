html
	height 100%
	width 100%

body
	font-family font-family-standard
	font-size font-size-standard
	color text-dark
	height 100%
	width 100%
	margin 0
	padding 0
	background-color #fff
	user-select none
	border 3px solid background-dark-border

for h in (1..6)
	h{h}
		font-size lookup('font-size-h' + h)

::selection
	color black
	background-color lighten(primary-color, 80%)
a
	color text-link
	text-decoration none
	cursor pointer
	&:hover
		color text-link-hover

p, a, small, .toggle span
	line-height 1.6em

small
	font-size .875em

strong
	font-weight 700

::-webkit-scrollbar
	background-color background-dark
	width 6px

::-webkit-scrollbar-thumb:window-inactive,
::-webkit-scrollbar-thumb
	background-color lighten(background-dark-border, 4%)
