#home
	text-align center
	.container
		small
			display block
			margin-top .4rem
			color darken(text-light, 30%)

hr
	border-top 2px solid background-dark-border
	border-bottom 0
	border-right 0
	border-left 0
	margin 1.4rem 0 1rem
	outline 0
	background-color transparent
	box-shadow none

input[type="checkbox"]
	display none

.uploads
	margin-top -1.4rem
.upload
	height 7rem
	border-radius 6px
	background-size cover
	position relative
	display block
	margin-top 1.4rem
	border 2px solid background-dark-border
	overflow hidden
	cf()
	&:hover
		border-color color-primary
	.gradient
		absolute bottom left
		width 100%
		height 50%
		background linear-gradient(0deg,#14151d,transparent)
		b
			color #fff
			absolute bottom .7rem left 1rem

.toggle
	span
		padding-right .8rem
		color text-light
		position relative
		cursor pointer
		&:hover
			color text-help
		&:after
			width 100%
			absolute bottom -4px left
			background-color transparent
			height 1px
			content ' '
			display block
		& + span
			padding-left .8rem
			padding-right 0
			border-left 1px solid background-dark-border
		&.selected
			color text-dark
			font-weight 900
			text-decoration underline

.options
	padding 3.5rem 3rem 1.8rem 3rem
	height 100%
	.nav
		position relative
		height 100%
		padding-top 2rem
		cf()
		li
			&.version
				text-align center
				width 100%
				display block
				absolute bottom
				small
					font-weight 900
					display block
					color darken(text-help, 40%)
					&.dev
						color text-help
						font-weight 500
			& > a
				padding 1rem 1.4rem 1rem 3rem
				color text-help
				display block
				border 2px solid transparent
				relative right -2px
				z-index 300
				font-weight 700
				position relative
				i
					color text-light-icon
					font-size 1.2rem
					absolute top 1.1rem left 1.1rem
			&:hover
				a
					color text-dark
			&.active
				a
					border-color background-dark-border
					border-right 2px solid lighten(background-dark, .7%)
					color text-dark
					background-color lighten(background-dark, .7%)
					border-radius 6px 0 0 6px
					i
						color color-primary

	.panes, .grid-row
		height 100%
	.panes
		border 2px solid background-dark-border
		padding 2.2rem 2.6rem
		overflow-y auto
		background-color lighten(background-dark, .7%)
		border-radius 6px

.none
	text-align center
	margin-top 2rem
	p
		font-size 1.1rem
		padding .8rem 0
		i
			color color-primary
			font-size 1.3rem
			relative top 4px
			margin-right .4rem

.pane
	display none
	position relative
	width 100%
	h3
		color text-dark
		padding .5rem 0 .2rem 0
		margin .5rem 0
	small
		color text-light
		&.support
			cf()
			display block
			margin-top 3rem
			font-weight 600

	&.active
		display block
	.info, .option
		padding 0
	.option
		padding-left 2rem
	.helper
		color text-help
	.info p
		color text-help
		font-weight 700
	.help-block
		color text-light
	.option-item
		display block
		width 100%
		padding .9rem 0
		cf()
		& + .option-item
			border-top 1px solid background-dark-border
	.shortcuts
		padding 1.7rem 3rem
		background-color #fff
		border 2px solid background-dark-border
		display block
		width 100%
		max-width 28rem
		margin 2rem auto 1rem auto
		border-radius 6px
		overflow hidden
		cf()
	.shortcut
		display block
		.helper
			display block
		& + .shortcut
			margin-top .8rem
			padding-top .8rem
			border-top 1px solid background-dark-border
		& > *
			display inline-block
			vertical-align top
		kbd
			color color-purple
			font-weight 800
			font-size 1rem
			margin-left .4rem
			letter-spacing -.4px
h3
	font-weight 900
	letter-spacing -1px
	& + p
		color text-light

h4
	letter-spacing -1.2px
	font-weight 700
	& + p
		color text-light
		margin-top .4rem

.title
	font-size .86rem
	display inline-block
	vertical-align top
	font-weight 700
	&-bar
		fixed top left
		width 100%
		height auto
		text-align center
		padding .9rem 0
		img
			display inline-block
			vertical-align top
			margin-right .3rem
			relative top -1px
	&-drag
		width calc(100% - 9rem)
		padding 1.3rem 0
		absolute top left
		content ' '
		display block
		-webkit-app-region drag
	&-options
		absolute top right .4rem
		padding .74rem 0
		z-index 9000
		a
			display inline-block
			vertical-align top
			&:hover
				i
					color text-dark
					cursor pointer
		i
			color text-light
			padding 0 .7rem
			font-size 1rem
