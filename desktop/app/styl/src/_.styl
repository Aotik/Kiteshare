#home
	text-align center
	.container
		small
			display block
			margin-top .4rem
			color color-yellow

hr
	border-top 1px solid background-dark-border
	border-bottom 0
	border-right 0
	border-left 0
	margin 1.4rem 0 1rem
	outline 0
	background-color transparent
	box-shadow none

input[type="checkbox"]
	display none

.uploads
	margin-top -1.4rem
.upload
	height 10rem
	background-size cover
	position relative
	display block
	margin-top 1.4rem
	border 2px solid background-dark-border
	cf()
	&:hover
		border-color color-pink
	.gradient
		absolute bottom left
		width 100%
		height 50%
		background linear-gradient(0deg,#14151d,transparent)
		b
			color #fff
			absolute bottom .7rem left 1rem

.toggle
	span
		padding-right .8rem
		color text-light
		position relative
		cursor pointer
		&:hover
			color text-help
		&:after
			width 100%
			absolute bottom -4px left
			background-color transparent
			height 1px
			content ' '
			display block
		& + span
			padding-left .8rem
			padding-right 0
			border-left 1px solid background-dark-border
		&.selected
			color #fff
			font-weight 800
			text-decoration underline

.options
	padding 3.5rem 3rem 1.8rem 3rem
	height 100%
	.nav
		position relative
		height 100%
		cf()
		li
			&.version
				text-align center
				width 100%
				display block
				absolute bottom
				small
					display block
					color darken(text-help, 40%)
					&.dev
						color darken(text-help, 70%)
			& > a
				padding 1rem 1.4rem
				color text-light
				display block
				border 2px solid transparent
				relative right -2px
				i
					color text-light-icon
					font-size .8rem
					margin-right .6rem
					relative top 1px
			&:hover
				a
					color #fff
			&.active
				a
					border-color background-dark-border
					border-right 2px solid background-dark
					color #fff
					i
						color #fff
	.panes, .grid-row
		height 100%
	.panes
		border 2px solid background-dark-border
		padding 2rem 2.5rem
		overflow-y auto

.pane
	display none
	position relative
	width 100%
	h3
		color #fff
		font-weight 600
		padding 1.4rem 0 .5rem 0
		margin-top 2rem
	small
		color text-light
	&.active
		display block
	.info, .option
		padding 0
	.option
		padding-left 2rem
	.helper, .info p
		color text-help
	.help-block
		color text-light
	.option-item
		display block
		width 100%
		padding .5rem 0
		cf()
	.shortcuts
		padding 2rem 2.4rem
		background-color lighten(background-dark, 2%)
		border 2px solid background-dark-border
		border-radius 8px
		margin-top 3rem
		display inline-block
	.shortcut
		display block
		& + .shortcut
			margin-top 1.4rem
		& > *
			display inline-block
			vertical-align top
		& + .helper
			margin-top 2rem
		kbd
			color lighten(color-purple, 25%)
			background-color darken(color-purple, 65%)
			font-weight 800
			padding .3rem .4rem
			font-size .86rem
			text-transform uppercase
			margin-left .4rem
h3
	& + p
		color text-light

h4
	& + p
		color text-light
		margin-top .4rem

.title
	font-size .86rem
	display inline-block
	vertical-align top
	&-bar
		fixed top left
		width 100%
		height auto
		text-align center
		padding .9rem 0
		img
			display inline-block
			vertical-align top
			margin-right .3rem
			relative top -1px
	&-drag
		width calc(100% - 9rem)
		padding 1.3rem 0
		absolute top left
		content ' '
		display block
		-webkit-app-region drag
	&-options
		absolute top right .4rem
		padding .74rem 0
		z-index 9000
		a
			display inline-block
			vertical-align top
			&:hover
				i
					color #fff
					cursor pointer
		i
			color text-light
			padding 0 .7rem
			font-size 1rem
